<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ShoppingCartReport" 
              pageWidth="595" 
              pageHeight="842" 
              columnWidth="555" 
              leftMargin="20" 
              rightMargin="20" 
              topMargin="20" 
              bottomMargin="20">
    
    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="One Empty Record"/>
    

    
    <!-- Campos del reporte basados en la clase CartItem -->
    <field name="productName" class="java.lang.String"/>
    <field name="size" class="java.lang.String"/>
    <field name="amount" class="java.lang.Integer"/>
    <field name="price" class="java.lang.Double"/>
    

    <!-- Título del reporte -->
    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="20" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[S]]></text>
            </staticText>
            
            <!-- Información del usuario -->
            <staticText>
                <reportElement x="0" y="60" width="100" height="20"/>
                <text><![CDATA[Customer:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="60" width="200" height="20"/>
                <textFieldExpression><![CDATA[$P{USER_NAME}]]></textFieldExpression>
            </textField>
            
            <!-- Fecha de compra -->
            <staticText>
                <reportElement x="350" y="60" width="80" height="20"/>
                <text><![CDATA[Date:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="430" y="60" width="125" height="20"/>
                <textFieldExpression><![CDATA[$P{PURCHASE_DATE}]]></textFieldExpression>
            </textField>
        </band>
    </title>
    
    <!-- Encabezado de columnas -->
    <columnHeader>
        <band height="40">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="40" backcolor="#F5F5F5"/>
            </rectangle>
            
            <staticText>
                <reportElement x="0" y="10" width="200" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Product]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="200" y="10" width="80" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Size]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="280" y="10" width="80" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Amount]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="360" y="10" width="80" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Unit Price]]></text>
            </staticText>
            

            
            <!-- Línea separadora -->
            <line>
                <reportElement x="0" y="39" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#CCCCCC"/>
                </graphicElement>
            </line>
        </band>
    </columnHeader>
    
    <!-- Detalle de los productos -->
    <detail>
        <band height="30">
            <!-- Product Name -->
            <textField>
                <reportElement x="0" y="5" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{productName}]]></textFieldExpression>
            </textField>
            
            <!-- Size -->
            <textField>
                <reportElement x="200" y="5" width="80" height="20"/>
                <textFieldExpression><![CDATA[$F{size}]]></textFieldExpression>
            </textField>
            
            <!-- Amount -->
            <textField>
                <reportElement x="280" y="5" width="80" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{amount}]]></textFieldExpression>
            </textField>
            
            <!-- Unit Price -->
            <textField>
                <reportElement x="360" y="5" width="80" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["€ " + $F{price}]]></textFieldExpression>
            </textField>
          
        </band>
    </detail>
    
</jasperReport>